<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Crear Post - Social Media</title>
  <!-- Materialize CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <!-- Iconos de Google -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="grey lighten-4">

<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
        <span class="card-title center-align">Crear Nuevo Post</span>
        <form action="/posts" method="POST">
          <!-- Título -->
          <div class="input-field">
            <input id="title" type="text" name="title" required minlength="5" maxlength="30">
            <label for="title">Título del Post</label>
          </div>

          <!-- Contenido -->
          <div class="input-field">
            <textarea id="content" class="materialize-textarea" name="content" required minlength="10"></textarea>
            <label for="content">Contenido</label>
          </div>

          <!-- Hashtags -->
          <div class="input-field">
            <input id="hashtags" type="text" name="hashtags" placeholder="#ejemplo, #nodejs">
            <label for="hashtags">Hashtags (separados por comas)</label>
          </div>

          <!-- URL Imagen -->
          <div class="input-field">
            <input id="imageUrl" type="text" name="imageUrl" placeholder="https://">
            <label for="imageUrl">URL de la Imagen</label>
          </div>

          <!-- Hidden userId -->
          <input type="hidden" name="userId" value="<%= user._id %>">

          <div class="center-align" style="margin-top:20px;">
            <button class="btn-large blue waves-effect waves-light" type="submit">
              Crear Post <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- Materialize JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
