<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Social Media - Posts</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="grey lighten-4">

  <nav>
    <div class="nav-wrapper teal">
      <a href="/posts" class="brand-logo center">Social Media</a>
    </div>
  </nav>

  <div class="container">
    <h4 class="center-align">Bienvenido a Social Media</h4>

    <div class="right-align mb-4">
      <a href="/posts/new" class="btn waves-effect waves-light green">
        <i class="material-icons left">add</i> Nuevo Post
      </a>
    </div>

    <div class="row">
      <% if (posts.length === 0) { %>
        <p class="center-align grey-text">No hay posts registrados a√∫n.</p>
      <% } %>

      <% posts.forEach(post => { %>
        <div class="col s12 m6 l4">
          <div class="card hoverable">
            <div class="card-image">
              <% if (post.imageUrl) { %>
                <img src="<%= post.imageUrl %>" alt="Imagen del post">
              <% } else { %>
                <img src="https://via.placeholder.com/400x200?text=Sin+Imagen" alt="Imagen del post">
              <% } %>
            </div>
            <div class="card-content">
              <span class="card-title"><%= post.title %></span>
              <p><%= post.content %></p>
              <p>
                <strong>Hashtags:</strong>
                <% if (post.hashtags && post.hashtags.length > 0) { %>
                  <% post.hashtags.forEach(tag => { %>
                    <span class="chip">#<%= tag %></span>
                  <% }) %>
                <% } else { %>
                  <span class="grey-text">-</span>
                <% } %>
              </p>
            </div>
            <div class="card-action">
              <div class="right">
                <a href="/posts/<%= post._id %>/edit" class="btn-flat">
                  <i class="material-icons teal-text">edit</i>
                </a>
                <form action="/posts/<%= post._id %>/delete" method="POST" style="display:inline;">
                  <button type="submit" class="btn-flat">
                    <i class="material-icons red-text">delete</i>
                  </button>
                </form>
              </div>
              <span><strong>Autor:</strong> Usuario</span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
