<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Post - Social Media</title>
  <!-- Materialize CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <!-- Iconos de Google -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="grey lighten-4">

<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
        <span class="card-title center-align">Editar Post</span>
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
          <!-- Título -->
          <div class="input-field">
            <input id="title" type="text" name="title" required minlength="5" maxlength="30" value="<%= post.title %>">
            <label for="title" class="active">Título del Post</label>
          </div>

          <!-- Contenido -->
          <div class="input-field">
            <textarea id="content" class="materialize-textarea" name="content" required minlength="10"><%= post.content %></textarea>
            <label for="content" class="active">Contenido</label>
          </div>

          <!-- Hashtags -->
          <div class="input-field">
            <input id="hashtags" type="text" name="hashtags" value="<%= post.hashtags.join(', ') %>">
            <label for="hashtags" class="active">Hashtags (separados por comas)</label>
          </div>

          <!-- URL Imagen -->
          <div class="input-field">
            <input id="imageUrl" type="text" name="imageUrl" value="<%= post.imageUrl %>">
            <label for="imageUrl" class="active">URL de la Imagen</label>
          </div>

          <div class="center-align" style="margin-top:20px;">
            <button class="btn-large orange waves-effect waves-light" type="submit">
              Actualizar Post <i class="material-icons right">save</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- Materialize JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
